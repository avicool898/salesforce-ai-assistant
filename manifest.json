{
  "manifest_version": 3,
  "name": "Salesforce AI Assistant",
  "version": "2.0.0",
  "description": "Advanced AI-powered assistant for Salesforce with contextual understanding and intelligent guidance",
  
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs"
  ],
  
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://*.lightning.force.com/*"
  ],
  
  "background": {
    "service_worker": "src/js/background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.lightning.force.com/*"
      ],
      "js": [
        "src/js/privacy-filter.js",
        "src/js/content-simple.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  
  "action": {
    "default_title": "Salesforce AI Assistant - Click to open sidepanel",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "32": "src/icons/icon32.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  },
  
  "options_page": "src/options.html",
  
  "icons": {
    "16": "src/icons/icon16.png",
    "32": "src/icons/icon32.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/generate-pdf-guide.html",
        "src/tab.html",
        "src/icons/*"
      ],
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*"
      ]
    }
  ]
}